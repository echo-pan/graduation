page,
.content {
  min-height: 50%;
  background-color: #f8f8f8;
}
.number-box {
  width: 73px;
}
.actived {
  font-size: 28rpx;
  color: #2AAC34;
  border-bottom: #2AAC34 solid 8rpx;
}
.line-orange::after, .lines-orange::after {
  border-color: #FC6620;
}
.solid-bottom::after {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.content {
  display: flex;
}
.left-aside {
  flex-shrink: 0;
  width: 150rpx;
  height: 100%;
  background-color: #f8f8f8;
}
.f-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  color: #606266;
  position: relative;
}
.f-item.active {
  color: #2AAC34;
  background: #fff;
}
.f-item.active:before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  height: 30rpx;
  width: 8rpx;
  background-color: #2AAC34;
  opacity: .8;
}
.right-aside {
  flex: 1;
  overflow: hidden;
  padding-left: 20rpx;
}
.s-item {
  display: flex;
  align-items: center;
  height: 70rpx;
  padding-top: 8rpx;
  font-size: 28rpx;
  color: #303133;
}
.t-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  background: #fff;
  padding-top: 12rpx;
}
.t-list:after {
  content: '';
  flex: 99;
  height: 0;
}
.t-item {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 176rpx;
  font-size: 26rpx;
  color: #666;
  padding-bottom: 20rpx;
}
.t-item image {
  width: 140rpx;
  height: 140rpx;
}

