.actived {
  font-size: 28rpx;
  color: #2AAC34;
  position: relative;
}
.badge {
  background-color: #FF473C;
  width: 32rpx;
  height: 32rpx;
  color: #fff;
  font-size: 22rpx;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  left: 42rpx;
  bottom: 32rpx;
}
.actived:after {
  display: block;
  content: '';
  width: 54rpx;
  height: 8rpx;
  background-color: #2AAC34;
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  border-radius: 2px;
}
